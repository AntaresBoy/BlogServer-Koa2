{
  "apps": {
    "name": "blog-server",
    "script": "bin/www",
    "watch": true,
    "ignore_watch": ["node_modules", "logs"],
    "instances": 4,
    "error_file": "logs/err.log",
    "out_file": "logs/out.log",
    "pid_file": "pids/node-geo-api.pid",
    "min_uptime": "200s",
    "max_restarts": 10,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "cron_restart": "1 0 * * *",
    "merge_logs": true,
    "exec_interpreter": "node",
    "exec_mode": "fork",
    "autorestart": false,
    "vizion": false
  }
}